body
	background: $silver

.Landing
	margin 0
	display block

.Header
	background: $white
	display block

.Header-container
	position relative
	height inherit

.Header-menuContainer
	padding 7px 0
	overflow hidden

.Header-logo
	float left
	padding 2px 0
	box-sizing border-box
	img
		display block


.MainMenu
	float right
	line-height 40px
	.MainMenu-container
		padding 0
		margin 0
		.MainMenu-option
			display inline-block
			padding 0 10px
			.MainMenu-link
				text-decoration none
				color $black
		.active
			background: $red
			.MainMenu-link
				color $white

